{
  "name": "@omts/bubble-sort",
  "version": "0.0.3",
  "main": "dist/index.cjs.js",
  "module": "dist/es/index.js",
  "browser": "dist/index.umd.js",
  "unpkg": "dist/index.umd.min.js",
  "types": "dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "bun run clean && bun build src/index.ts --outdir dist --watch",
    "build": "bun run clean && bun run build:cjs && bun run build:esm && bun run build:umd && bun run build:types && bun run build:minify",
    "build:esm": "bun build src/index.ts --outdir dist/es ",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.cjs.js --format=cjs",
    "build:umd": "esbuild src/index.ts --bundle --outfile=dist/index.umd.js --format=iife --global-name=OmtsBubbleSort",
    "build:minify": "esbuild dist/index.cjs.js --outfile=dist/index.cjs.min.js --minify && esbuild dist/index.umd.js --outfile=dist/index.umd.min.js --minify",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/es",
    "test": "bun test"
  },
  "devDependencies": {
    "bun-types": "^1.1.27",
    "esbuild": "^0.23.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  }
}