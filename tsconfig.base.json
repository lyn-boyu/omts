{
  "compilerOptions": {
    "target": "ES2015",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "esModuleInterop": true,
    "declaration": true, // 启用类型声明文件的生成
    "skipLibCheck": true,
    "types": [
      "bun-types"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "node_modules",
    "dist"
  ]
}